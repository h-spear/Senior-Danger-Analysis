<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- Logo & Preview -->
    <LinearLayout
        android:id="@+id/mainSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainImageView"
            style="@style/MainActivityImageViewStyle"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

        <Switch
            android:id="@+id/serviceToggleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mainImageView"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_selector"
            android:layout_marginBottom="60dp"/>

    </LinearLayout>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mainSection"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/editInfoButton"
            style="@style/MainActivityButtonStyle"
            android:text="@string/EDIT_INFO" />


        <Button
            android:id="@+id/openPreviewButton"
            style="@style/MainActivityButtonStyle"
            android:text="@string/OPEN_PREVIEW" />

        <Button
            android:id="@+id/tempButton2"
            style="@style/MainActivityButtonStyle"
            android:text="어플 정보" />

    </LinearLayout>
</RelativeLayout>