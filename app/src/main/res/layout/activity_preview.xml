<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.PreviewActivity">



    <LinearLayout
        android:id="@+id/previewSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">


        <FrameLayout
            android:id="@+id/frameLayout"
            style="@style/CameraPreviewStyle"
            android:layout_gravity="center"
            android:elevation="20dp"
            android:background="@color/black"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="현재 카메라에 비추는 영역을 분석할 수 있습니다."
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/previewSection"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/closePreviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MainActivityButtonStyle"
            android:text="카메라 닫기"/>

    </LinearLayout>

</RelativeLayout>