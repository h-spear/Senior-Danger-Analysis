<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_gradient_yellow"
    tools:context=".Activity.PreviewActivity">

    <LinearLayout
        android:id="@+id/previewSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="586dp"
            android:layout_height="440dp"
            android:layout_gravity="center"
            android:elevation="20dp"
            android:background="@color/black"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:gravity="center"
            android:fontFamily="@font/sb_aggro_l"
            android:textColor="@color/black"
            android:text="@string/preview_activity_notice_msg"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/previewSection"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/closePreviewButton"
            style="@style/MainActivityButtonStyle"
            android:text="@string/btn_text_close_preview"/>

    </LinearLayout>

</RelativeLayout>