<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SDA" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ffd012</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffe270</item>
        <item name="colorSecondaryVariant">#ffe270</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <!-- Common Styles-->
    <style name="ButtonStyle">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
    </style>

    <style name="Title">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
    </style>

    <style name="Content">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
    </style>

    <style name="InputTitle">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
    </style>

    <style name="InputBox">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
    </style>

    <!-- Main Activity Styles-->
    <style name="MainActivityButtonStyle">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">#2e2e2e</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:fontFamily">@font/sb_aggro_l</item>
    </style>

</resources>