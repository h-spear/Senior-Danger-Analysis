<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#999999"
                android:startColor="#f1f1f1" />
            <corners
                android:radius="70dp" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff6454" />
            <corners
                android:radius="70dp" />
            <padding
                android:bottom="8dp"
                android:left="6dp"
                android:right="6dp"
                android:top="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff6454" />

            <corners
                android:radius="70dp" />

            <size
                android:width="150dp"
                android:height="70dp" />
        </shape>
    </item>

